<div class="form__wrapper">
  <%= hidden_field :authorization_handler, :handler_name, value: "socio_demographic_authorization_handler" %>
  <p class="text-center skip">
    <%= t("decidim.authorization_handlers.socio_demographic_authorization_handler.privacy").html_safe %>
  </p>
  <%= participatory_processes_select_field(form, :participation_process) %>
  <%= form.select :gender,
                  genders.map { |gender| [I18n.t(gender.downcase, scope: "decidim.verifications.genders"), gender.downcase] },
                  {
                    include_blank: t("decidim.verifications.genders.blank_option"),
                    label: t("gender", scope: "decidim.authorization_handlers.socio_demographic_authorization_handler.fields")
                  } %>
  <%= form.select :age,
                  ages.map { |age| [age, age] },
                  {
                    include_blank: t("decidim.verifications.age_slice.blank_option"),
                    label: t("age", scope: "decidim.authorization_handlers.socio_demographic_authorization_handler.fields")
                  } %>

  <%= form.text_field :phone_number,
                      {
                        label: t("phone_number", scope: "decidim.authorization_handlers.socio_demographic_authorization_handler.fields"),
                        help_text: t("phone_number_help", scope: "decidim.authorization_handlers.socio_demographic_authorization_handler.fields")
                      } %>

  <%= form.select :living_area,
                  zones.map { |zone| [zone, zone] },
                  {
                    label: t("living_area", scope: "decidim.authorization_handlers.socio_demographic_authorization_handler.fields")
                  } %>
</div>
